/* Write a program to print the following pattern:
5
45
345
2345
12345
*/

#include <stdio.h>

int main() {
    int i, j;

    // Loop for rows
    for(i = 1; i <= 5; i++) {
        // Print numbers from (6 - i) to 5
        for(j = 6 - i; j <= 5; j++) {
            printf("%d", j);
        }
        printf("\n"); // Move to next line
    }

    return 0;
}

/* Write a program to print the following pattern:
*****
 ****
  ***
   **
    *
*/

#include <stdio.h>

int main() {
    int i, j, n = 5;

    for(i = 1; i <= n; i++) {
        // Print spaces
        for(j = 1; j < i; j++) {
            printf(" ");
        }
        // Print stars
        for(j = i; j <= n; j++) {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}
